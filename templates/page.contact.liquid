<h1 class="contact-title">{{ page.title }}</h1>

<!-- Contact Info Section -->
<section class="contact-info">
  <div class="info-box">
    <h3>Our Office</h3>
    <p>123 Street Name, City, State, 123456</p>
  </div>
  <div class="info-box">
    <h3>Email</h3>
    <p><a href="mailto:info@example.com">info@example.com</a></p>
  </div>
  <div class="info-box">
    <h3>Phone</h3>
    <p><a href="tel:+911234567890">+91 12345 67890</a></p>
  </div>
</section>

<!-- Contact Form -->
{% form 'contact' %}
  {% if form.posted_successfully? %}
    <p class="contact-success">Thank you for your contact</p>
  {% endif %}

  {{ form.errors | default_errors }}

  <div class="contact-form-wrapper">

    <div class="input-row">
      <div class="input-group">
        <label for="ContactFormName">Name</label>
        <input type="text" id="ContactFormName" name="contact[name]" required>
      </div>

      <div class="input-group">
        <label for="ContactFormEmail">Email</label>
        <input type="email" id="ContactFormEmail" name="contact[email]" required>
      </div>
    </div>

    <div class="input-row">
      <div class="input-group">
        <label for="ContactFormPhone">Phone</label>
        <input type="tel" id="ContactFormPhone" name="contact[phone]">
      </div>
    </div>

    <div class="input-row">
      <label for="ContactFormMessage">Message</label>
      <textarea rows="6" id="ContactFormMessage" name="contact[body]" required></textarea>
    </div>

    <input type="submit" value="Send Message" class="contact-submit-btn">
  </div>
{% endform %}

<!-- Google Map Embed -->
<section class="map-section">
  <iframe src="https://www.google.com/maps/embed?pb=..." 
    width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
</section>

<!-- Link external CSS -->
{{ 'contact-form.css' | asset_url | stylesheet_tag }}
