<div class="custom-contact-container">
  <h1 class="contact-title">{{ page.title }}</h1>

  <!-- Contact Info -->
  <section class="contact-info">
    <div class="info-item">
      <h3>Visit Us</h3>
      <p>123 Main Street, New Delhi, India</p>
    </div>
    <div class="info-item">
      <h3>Email</h3>
      <p><a href="mailto:info@example.com">info@example.com</a></p>
    </div>
    <div class="info-item">
      <h3>Phone</h3>
      <p><a href="tel:+911234567890">+91 12345 67890</a></p>
    </div>
  </section>

  <!-- Contact Form -->
  {% form 'contact' %}
    {% if form.posted_successfully? %}
      <p class="contact-success">Thank you! Weâ€™ll get back to you soon.</p>
    {% endif %}

    {{ form.errors | default_errors }}

    <div class="contact-form">
      <div class="form-row">
        <div class="form-group">
          <label for="ContactFormName">Name</label>
          <input type="text" id="ContactFormName" name="contact[name]" required>
        </div>
        <div class="form-group">
          <label for="ContactFormEmail">Email</label>
          <input type="email" id="ContactFormEmail" name="contact[email]" required>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group full-width">
          <label for="ContactFormPhone">Phone</label>
          <input type="tel" id="ContactFormPhone" name="contact[phone]">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group full-width">
          <label for="ContactFormMessage">Message</label>
          <textarea rows="6" id="ContactFormMessage" name="contact[body]" required></textarea>
        </div>
      </div>

      <input type="submit" class="submit-btn" value="Send Message">
    </div>
  {% endform %}

  <!-- Map -->
  <section class="map-section">
    <iframe src="https://www.google.com/maps/embed?pb=..." 
            width="100%" height="300" style="border:0;" 
            allowfullscreen="" loading="lazy"></iframe>
  </section>
</div>

{{ 'contact-form.css' | asset_url | stylesheet_tag }}
