{% paginate search.results by 10 %}

  <style>
    .search-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px 20px;
      font-family: 'Segoe UI', sans-serif;
    }

    .search-heading {
      font-size: 28px;
      font-weight: bold;
      margin-bottom: 30px;
      color: #222;
      text-align: center;
    }

    .results-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
      justify-content: center;
    }

    /* If only one result, center the card with max-width */
    .results-grid.single-item {
      display: flex;
      justify-content: center;
    }

    .result-card {
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.07);
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
      height: 100%;
      max-width: 300px;
      width: 100%;
    }

    .result-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .result-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .result-card-content {
      padding: 20px;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .result-card h5 {
      font-size: 18px;
      margin: 0 0 10px;
      color: #000;
    }

    .result-card p {
      font-size: 14px;
      color: #555;
      line-height: 1.6;
    }

    .no-results {
      text-align: center;
      font-size: 20px;
      color: #999;
      padding: 80px 0;
    }

    .pagination {
      margin-top: 50px;
      text-align: center;
    }

    .pagination a {
      display: inline-block;
      padding: 8px 14px;
      margin: 0 5px;
      border: 1px solid #ccc;
      border-radius: 4px;
      color: #333;
      text-decoration: none;
      transition: 0.3s;
    }

    .pagination .current {
      background-color: #000;
      color: #fff;
      border: 1px solid #000;
    }

    .pagination a:hover {
      background-color: #f2f2f2;
    }
  </style>

  <div class="search-container">
    {% if search.performed %}
      <div class="search-heading">
        Search results for: <span style="color:#1a73e8;">"{{ search.terms }}"</span>
      </div>

      {% if search.results.size > 0 %}
        <div class="results-grid {% if search.results.size == 1 %}single-item{% endif %}">
          {% for item in search.results %}
            <div class="result-card">
              <a href="{{ item.url | within: collection }}">
                {% if item.featured_image %}
                  <img src="{{ item.featured_image.src | img_url: '500x' }}" alt="{{ item.featured_image.alt | escape }}">
                {% else %}
                  <img src="//via.placeholder.com/500x200?text=No+Image" alt="No Image">
                {% endif %}
              </a>
              <div class="result-card-content">
                <h5>{{ item.title | link_to: item.url }}</h5>
                <p>{{ item.content | strip_html | truncatewords: 30 }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p class="no-results">No results found for "{{ search.terms }}"</p>
      {% endif %}
    {% endif %}

    {% if paginate.pages > 1 %}
      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>

{% endpaginate %}
