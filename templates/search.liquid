{% paginate search.results by 10 %}

  <style>
    .search-results-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      font-family: sans-serif;
    }

    .results-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
    }

    .result-card {
      border: 1px solid #eee;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      transition: transform 0.2s ease;
      background-color: #fff;
    }

    .result-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    .result-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      display: block;
    }

    .result-card .no-image {
      width: 100%;
      height: 200px;
      background-color: #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #888;
      font-size: 16px;
    }

    .result-card h5 {
      margin: 0 0 10px;
      font-size: 18px;
    }

    .result-card p {
      font-size: 14px;
      color: #555;
      line-height: 1.6;
    }

    .pagination {
      margin-top: 40px;
      text-align: center;
    }

    .pagination a {
      padding: 8px 12px;
      border: 1px solid #ddd;
      margin: 0 5px;
      text-decoration: none;
      color: #333;
      display: inline-block;
      border-radius: 4px;
    }

    .pagination .current {
      background-color: #000;
      color: #fff;
      border: 1px solid #000;
    }
  </style>

  <div class="search-results-container">
    {% if search.performed %}
      {% if search.results.size > 0 %}
        <div class="results-grid">
          {% for item in search.results %}
            <div class="result-card">
              <a href="{{ item.url | within: collection }}" title="{{ item.title | escape }}">
                {% if item.featured_image %}
                  <img src="{{ item.featured_image.src | img_url: '500x' }}" alt="{{ item.featured_image.alt | escape }}">
                {% else %}
                  <div class="no-image">No Image</div>
                {% endif %}
              </a>
              <div style="padding: 15px;">
                <h5>{{ item.title | link_to: item.url }}</h5>
                <p>{{ item.content | strip_html | truncatewords: 30 }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p style="text-align: center; padding: 50px 0; font-size: 18px;">No results found.</p>
      {% endif %}
    {% endif %}

    {% if paginate.pages > 1 %}
      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>

{% endpaginate %}
