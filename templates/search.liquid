{% paginate search.results by 10 %}

  <style>
    .search-wrapper {
      margin-bottom: 3rem;
      max-width: 1200px;
      margin: auto;
      padding: 50px 20px;
      font-family: sans-serif;
    }

    .search-title {
      font-size: 1.6rem;
      font-weight: bold;
      margin-bottom: 3rem;
      color: #222;
      text-decoration: none;
      display: inline-block;
    }

    .search-grid {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    .search-card {
      background: #fff;
      border: 1px solid #eee;
      border-radius: 8px;
      width: calc(20% - 1.2rem);
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      transition: transform 0.2s ease;
      text-align: center;
      padding: 1rem;
      display: flex;
      flex-direction: column;
    }

    .search-card:hover {
      transform: translateY(-5px);
    }

    .search-card img {
      max-width: 100%;
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 4px;
      margin-bottom: 0.8rem;
    }

    .search-card-title {
      font-size: 1rem;
      font-weight: 500;
      margin-bottom: 0.4rem;
      color: #333;
    }

    .search-card-snippet {
      font-size: 0.9rem;
      color: #666;
      line-height: 1.4;
      margin-bottom: 0.5rem;
    }

    .pagination {
      margin-top: 40px;
      text-align: center;
    }

    .pagination a {
      padding: 8px 12px;
      border: 1px solid #ccc;
      margin: 0 5px;
      text-decoration: none;
      color: #333;
      border-radius: 4px;
    }

    .pagination .current {
      background-color: #000;
      color: #fff;
      border: 1px solid #000;
    }

    .no-results {
      text-align: center;
      font-size: 1.2rem;
      padding: 50px 0;
      color: #999;
    }

    @media (max-width: 768px) {
      .search-card {
        width: calc(50% - 1.2rem);
      }
    }

    @media (max-width: 480px) {
      .search-card {
        width: 100%;
      }
    }
  </style>

  <div class="search-wrapper">
    {% if search.performed %}
      <div class="search-title">
        Search results for: <span style="color: #1a73e8;">"{{ search.terms }}"</span>
      </div>

      {% if search.results.size > 0 %}
        <div class="search-grid {% if search.results.size == 1 %}single-item{% endif %}">
          {% for item in search.results %}
            <div class="search-card">
              <a href="{{ item.url | within: collection }}">
                {% if item.featured_image %}
                  <img src="{{ item.featured_image.src | img_url: 'large' }}" alt="{{ item.featured_image.alt | escape }}">
                {% else %}
                  <img src="//via.placeholder.com/500x200?text=No+Image" alt="No Image">
                {% endif %}
              </a>
              <div class="search-card-title">
                <a href="{{ item.url | within: collection }}">{{ item.title }}</a>
              </div>
              <div class="search-card-snippet">
                {{ item.content | strip_html | truncatewords: 20 }}
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="no-results">No results found for "{{ search.terms }}"</div>
      {% endif %}
    {% endif %}

    {% if paginate.pages > 1 %}
      <div class="pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}
  </div>

{% endpaginate %}
