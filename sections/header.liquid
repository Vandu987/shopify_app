<header class="site-header">
  <div class="container">
    <!-- Logo -->
    <div class="site-logo">
      <a href="{{ shop.url }}">
        <img src="{{ settings.logo | img_url: '200x' }}" alt="{{ shop.name }}">
      </a>
    </div>

    <!-- Navigation Menu -->
    <nav class="site-nav">
      <ul>
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Cart -->
    <div class="site-cart">
      <a href="/cart">
        ðŸ›’ Cart ({{ cart.item_count }})
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    }
  ]
}
{% endschema %}
