{% comment %} 
  Section: Must-Haves Toys (Board Games, Figures, Puzzles)
{% endcomment %}

<div class="must-haves-wrapper">
  <h2 class="must-haves-heading text-center">{{ section.settings.heading }}</h2>
  <div class="must-haves-columns">
    {% for block in section.blocks %}
      <div class="must-haves-column">
        <div class="column-header">
          <h3>{{ block.settings.title }}</h3>
          {% assign link = block.settings.view_all_url %}
          {% if link %}
            <a href="{{ link }}" class="view-all">VIEW ALL</a>
          {% endif %}
        </div>
        <div class="product-list">
          {% assign collection = collections[block.settings.collection] %}
          {% for product in collection.products limit: 3 %}
            <div class="product-item">
              <img src="{{ product.featured_image | img_url: '120x' }}" alt="{{ product.title }}">
              <div>
                <p class="product-title">{{ product.title }}</p>
                <p class="product-price">{{ product.price | money }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Must-Haves Toys",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Must-haves Toys"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Toy Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title",
          "default": "Board Games"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "url",
          "id": "view_all_url",
          "label": "View All Link"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Must-Haves Toys Layout",
      "category": "Custom"
    }
  ]
}
{% endschema %}
