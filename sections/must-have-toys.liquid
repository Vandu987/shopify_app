{% comment %} 
  Section: Must-Haves Toys (Board Games, Figures, Puzzles)
{% endcomment %}

<div class="must-haves-wrapper">
  <h2 class="must-haves-heading text-center">{{ section.settings.heading }}</h2>
  <div class="must-haves-columns">
    {% for block in section.blocks %}
      <div class="must-haves-column">
        <div class="column-header">
          <h3>{{ block.settings.title }}</h3>
          {% assign link = block.settings.view_all_url %}
          {% if link %}
            <a href="{{ link }}" class="view-all">VIEW ALL</a>
          {% endif %}
        </div>
        <div class="product-list">
          {% assign collection = collections[block.settings.collection] %}
          {% for product in collection.products limit: 3 %}
            <div class="product-item">
              <img src="{{ product.featured_image | img_url: '120x' }}" alt="{{ product.title }}">
              <div>
                <p class="product-title">{{ product.title }}</p>
                <p class="product-price">{{ product.price | money }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.must-haves-wrapper {
  background-color: #e6f2ff;
  padding: 40px 20px;
  font-family: 'Comic Sans MS', cursive, sans-serif;
}

.must-haves-heading {
  font-size: 32px;
  margin-bottom: 40px;
  font-weight: bold;
}

.must-haves-columns {
  display: flex;
  justify-content: space-between;
  gap: 40px;
  flex-wrap: wrap;
}

.must-haves-column {
  flex: 1;
  min-width: 250px;
}

.column-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.column-header h3 {
  font-size: 20px;
  margin: 0;
}

.column-header .view-all {
  font-size: 12px;
  color: #000;
  text-decoration: underline;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.product-item {
  display: flex;
  gap: 10px;
  align-items: center;
}

.product-item img {
  width: 60px;
  height: 60px;
  object-fit: contain;
}

.product-title {
  font-size: 14px;
  margin: 0 0 2px;
  font-weight: bold;
}

.product-price {
  font-size: 13px;
  color: #333;
  margin: 0;
}
</style>

{% schema %}
{
  "name": "Must-Haves Toys",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Must-haves Toys"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Toy Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title",
          "default": "Board Games"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "url",
          "id": "view_all_url",
          "label": "View All Link"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Must-Haves Toys Layout",
      "category": "Custom"
    }
  ]
}
{% endschema %}
