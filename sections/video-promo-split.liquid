{% comment %} 
  Section: Video + Promo Text (Split Layout)
{% endcomment %}

<div class="nerf-promo-wrapper">
  <div class="nerf-promo-container">
    <div class="nerf-video">
      <iframe width="100%" height="315" src="{{ section.settings.video_url }}" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="nerf-content">
      <h2 class="nerf-heading">{{ section.settings.heading }}</h2>
      <p class="nerf-subtext">{{ section.settings.subtext }}</p>
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="nerf-btn">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video Promo Split",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Experience Nerf Ultra blasters for an Ultimate time!"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Sub Text",
      "default": "The furthest flying Nerf darts EVER, featuring an innovative flight tip, Aerofin technology and Nerf Ultra foam. Take your game to the next level with Nerf Ultra blasters and darts!"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "YouTube Video Embed URL"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Get this now!"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Video Promo Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
