# Creating Customer Testimonials and Call to Action (CTA) Shopify sections

# Testimonials Section
testimonials_section = '''<section class="testimonials">
  <div class="container">
    <h2 class="testimonials-heading">{{ section.settings.heading }}</h2>
    <div class="testimonials-grid">
      {% for block in section.blocks %}
        <div class="testimonial-card">
          <p class="quote">“{{ block.settings.quote }}”</p>
          <p class="author">- {{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.testimonials {
  padding: 4rem 2rem;
  background: #f8f8f8;
  text-align: center;
}
.testimonials-heading {
  font-size: 2rem;
  color: #000;
  margin-bottom: 2rem;
}
.testimonials-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  justify-content: center;
}
.testimonial-card {
  background: #fff;
  border-radius: 10px;
  padding: 1.5rem;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  max-width: 300px;
}
.quote {
  font-size: 1rem;
  color: #333;
  margin-bottom: 1rem;
}
.author {
  font-weight: bold;
  color: #ff6b6b;
}
</style>

{% schema %}
{
  "name": "Customer Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "quote",
          "label": "Quote",
          "default": "This product changed my life!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John Doe"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Customer Testimonials",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}