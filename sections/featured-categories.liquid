<div class="featured-categories-section text-center">
  <p>{{ section.settings.subheading }}</p>
  <h2>{{ section.settings.heading }}</h2>
  <div class="category-grid">
    {% for block in section.blocks %}
      {% if block.type == 'category' %}
        <div class="category-item">
          {% if block.settings.link %}
            <a href="{{ block.settings.link }}">
          {% endif %}
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title }}">
              {% endif %}
              <p>{{ block.settings.title }}</p>
          {% if block.settings.link %}
            </a>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Categories"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Shop all"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Featured Categories",
      "category": "Custom",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}
