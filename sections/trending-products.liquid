<div class="nt-section">
  <h2 class="nt-heading text-center">{{ section.settings.heading }}</h2>

  <div class="products-grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="product-card">

          <a href="{{ product.url }}">
            <div class="image-container">
              <img class="main-image" src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
              {% if product.images.size > 1 %}
                <img class="hover-image" src="{{ product.images[1] | img_url: 'large' }}" alt="{{ product.title }}">
              {% endif %}

              {% if product.compare_at_price_max > product.price %}
                {% assign discount = product.compare_at_price_max | minus: product.price | times: 100 | divided_by: product.compare_at_price_max %}
                <span class="sold-out" style="position:absolute;top:10px;left:10px;background:#06c;">-{{ discount | round }}% OFF</span>
              {% endif %}
            </div>
          </a>

          <div class="product-title">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </div>

          <div class="product-price">
            {{ product.price | money }}
            {% if product.compare_at_price_max > product.price %}
              <span class="compare-price">{{ product.compare_at_price_max | money }}</span>
            {% endif %}
          </div>

          {% unless product.available %}
            <div class="sold-out">Sold Out</div>
          {% else %}
            <form method="post" action="/cart/add">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <button type="submit" class="add-to-cart-btn">Add to Cart</button>
            </form>
          {% endunless %}

        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .nt-section {
    padding: 50px 20px;
    background: #fdfdfd;
    max-width: 1200px;
    margin: auto;
  }

  .products-grid {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .product-card {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 8px;
    width: calc(23% - 1.2rem);
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    transition: transform 0.2s ease;
    text-align: center;
    padding: 1rem;
    position: relative;
    overflow: hidden;
  }

  .product-card:hover {
    transform: translateY(-5px);
  }

  .image-container {
    position: relative;
    height: 200px;
    margin-bottom: 0.8rem;
  }

  .main-image,
  .hover-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 4px;
    transition: opacity 0.3s ease;
  }

  .main-image {
    z-index: 1;
    opacity: 1;
  }

  .hover-image {
    z-index: 2;
    opacity: 0;
  }

  .product-card:hover .hover-image {
    opacity: 1;
  }

  .product-card:hover .main-image {
    opacity: 0;
  }

  .product-title {
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 0.4rem;
    color: #333;
  }

  .product-price {
    font-size: 1rem;
    font-weight: bold;
    color: #06c;
    margin-bottom: 0.4rem;
  }

  .compare-price {
    text-decoration: line-through;
    color: #999;
    font-size: 0.9rem;
    margin-left: 6px;
  }

  .sold-out {
    display: inline-block;
    margin-top: 0.5rem;
    padding: 0.2rem 0.5rem;
    background: #e53935;
    color: #fff;
    font-size: 0.85rem;
    border-radius: 4px;
  }

  .add-to-cart-btn {
    margin-top: 0.7rem;
    padding: 6px 12px;
    background: #ff6b6b;
    color: #fff;
    font-size: 0.9rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .add-to-cart-btn:hover {
    background: #ec6565;
  }

  @media (max-width: 768px) {
    .product-card {
      width: calc(50% - 1.2rem);
    }
  }

  @media (max-width: 480px) {
    .product-card {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Now Trending",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Now Trending"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Now Trending",
      "category": "Custom",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}
