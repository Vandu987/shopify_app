<div class="nt-section">
  <h2 class="nt-heading text-center">{{ section.settings.heading }}</h2>

  <div class="nt-grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="nt-product-card">
          <a href="{{ product.url }}">
            <div class="nt-image-wrapper">
              {% assign second_image = product.images[1] %}
              <img class="nt-main-image" src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}">
              {% if second_image %}
                <img class="nt-hover-image" src="{{ second_image | img_url: '400x' }}" alt="{{ product.title }}">
              {% endif %}

              {% if product.compare_at_price_max > product.price %}
                {% assign discount = product.compare_at_price_max | minus: product.price | times: 100 | divided_by: product.compare_at_price_max %}
                <span class="nt-discount-badge">-{{ discount | round }}% SALE</span>
              {% endif %}
            </div>
          </a>

          <div class="nt-product-info">
            {% assign rating = product.metafields.custom.rating.value | default: 0 %}
            {% assign full_stars = rating | floor %}
            {% assign has_half_star = rating > full_stars %}
            {% assign empty_stars = 5 | minus: full_stars | minus: has_half_star %}

            <div class="star-rating" aria-label="Rating: {{ rating }} out of 5">
              {% for i in (1..full_stars) %}
                <svg class="star-icon" viewBox="0 0 24 24" fill="#FFD700" width="20" height="20">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                </svg>
              {% endfor %}

              {% if has_half_star %}
                <svg class="star-icon" viewBox="0 0 24 24" fill="#FFD700" width="20" height="20">
                  <path d="M12 15.4L8.24 17.67 9.24 13.39 5.91 10.51l4.38-.38L12 6.1v9.3z"/>
                  <path d="M22 9.24l-7.19-.62L12 2v13.4l6.18 3.6-1.64-7.03L22 9.24z" fill="#ddd"/>
                </svg>
              {% endif %}

              {% for i in (1..empty_stars) %}
                <svg class="star-icon" viewBox="0 0 24 24" fill="#ddd" width="20" height="20">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                </svg>
              {% endfor %}
            </div>

            <p class="nt-title">{{ product.title }}</p>
            <div class="nt-price">
              {% if product.compare_at_price_max > product.price %}
                <span class="nt-price-current">{{ product.price | money }}</span>
                <span class="nt-price-old">{{ product.compare_at_price_max | money }}</span>
              {% else %}
                <span class="nt-price-current">{{ product.price | money }}</span>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Now Trending",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Now Trending"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Now Trending",
      "category": "Custom",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
