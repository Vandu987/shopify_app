<div class="nt-section">
  <h2 class="nt-heading text-center">{{ section.settings.heading }}</h2>

  <div class="nt-grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="nt-product-card">
          <a href="{{ product.url }}">
            <div class="nt-image-wrapper">
              {% assign second_image = product.images[1] %}
              <img class="nt-main-image" src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}">
              {% if second_image %}
                <img class="nt-hover-image" src="{{ second_image | img_url: '400x' }}" alt="{{ product.title }}">
              {% endif %}

              {% if product.compare_at_price_max > product.price %}
                {% assign discount = product.compare_at_price_max | minus: product.price | times: 100 | divided_by: product.compare_at_price_max %}
                <span class="nt-discount-badge">-{{ discount | round }}% SALE</span>
              {% endif %}
            </div>
          </a>

          <div class="nt-product-info">
            {% render 'rating', product: product %}
            <p class="nt-title">{{ product.title }}</p>
            <div class="nt-price">
              {% if product.compare_at_price_max > product.price %}
                <span class="nt-price-current">{{ product.price | money }}</span>
                <span class="nt-price-old">{{ product.compare_at_price_max | money }}</span>
              {% else %}
                <span class="nt-price-current">{{ product.price | money }}</span>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
<style>
.nt-section {
  padding: 50px 80px;
  background: #fdfdfd;
}

.nt-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: 24px;
}
.nt-product-card {
  background: #ffffff;
  border: 1px solid #e2e2e2;
  border-radius: 8px;
  overflow: hidden;
  transition: transform 0.3s ease;
}
.nt-product-card:hover {
  transform: translateY(-5px);
}
.nt-image-wrapper {
  position: relative;
  overflow: hidden;
  height:220px;
}
.nt-main-image,
.nt-hover-image {
  width: 100%;
  height: 100%;
  display: block;
  transition: transform 0.4s ease, opacity 0.4s ease;
}
.nt-hover-image {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}
.nt-product-card:hover .nt-main-image {
  opacity: 0;
  transform: scale(1.05);
}
.nt-product-card:hover .nt-hover-image {
  opacity: 1;
  transform: scale(1.05);
}

.nt-product-info {
  padding: 15px;
  text-align: start;
}
.nt-stars {
  color: #ffb400;
  font-size: 14px;
  margin-bottom: 5px;
}
.nt-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #333;
}
.nt-price {
  display: flex;
  justify-content: start;
  align-items: center;
  gap: 8px;
}
.nt-price-current {
  font-size: 16px;
  font-weight: bold;
  color: #222;
}
.nt-price-old {
  font-size: 14px;
  color: #888;
  text-decoration: line-through;
}
</style>
{% schema %}
