<div class="nt-section">
  <h2 class="nt-heading text-center">{{ section.settings.heading }}</h2>

  <div class="nt-grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="nt-product-card">
          <a href="{{ product.url }}">
            <div class="nt-image-wrapper">
              {% assign second_image = product.images[1] %}
              <img class="nt-main-image" src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}">
              {% if second_image %}
                <img class="nt-hover-image" src="{{ second_image | img_url: '400x' }}" alt="{{ product.title }}">
              {% endif %}

              {% if product.compare_at_price_max > product.price %}
                {% assign discount = product.compare_at_price_max | minus: product.price | times: 100 | divided_by: product.compare_at_price_max %}
                <span class="nt-discount-badge">-{{ discount | round }}% SALE</span>
              {% endif %}
            </div>
          </a>

          <div class="nt-product-info">
           <div class="nt-stars text-center">
              {% assign rating = product.metafields.custom.rating | default: 5 %}
              {% assign full_stars = rating | floor %}
              {% assign has_half_star = rating > full_stars %}
              
              {% for i in (1..5) %}
                {% if i <= full_stars %}
                  <!-- Full Star -->
                  <svg class="nt-star" width="16" height="16" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path fill="#FFD700" d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.9 1.504 8.294L12 18.896l-7.44 4.604 1.504-8.294-6.064-5.9 8.332-1.151z"/>
                  </svg>
                {% elsif has_half_star and i == full_stars | plus: 1 %}
                  <!-- Half Star -->
                  <svg class="nt-star" width="16" height="16" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                      <linearGradient id="halfGrad{{ forloop.index }}" x1="0" y1="0" x2="100%" y2="0">
                        <stop offset="50%" stop-color="#FFD700"/>
                        <stop offset="50%" stop-color="#E0E0E0"/>
                      </linearGradient>
                    </defs>
                    <path fill="url(#halfGrad{{ forloop.index }})" d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.9 1.504 8.294L12 18.896l-7.44 4.604 1.504-8.294-6.064-5.9 8.332-1.151z"/>
                  </svg>
                {% else %}
                  <!-- Empty Star -->
                  <svg class="nt-star" width="16" height="16" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path fill="#E0E0E0" d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.9 1.504 8.294L12 18.896l-7.44 4.604 1.504-8.294-6.064-5.9 8.332-1.151z"/>
                  </svg>
                {% endif %}
              {% endfor %}
            </div>

            <p class="nt-title">{{ product.title }}</p>
            <div class="nt-price">
              {% if product.compare_at_price_max > product.price %}
                <span class="nt-price-current">{{ product.price | money }}</span>
                <span class="nt-price-old">{{ product.compare_at_price_max | money }}</span>
              {% else %}
                <span class="nt-price-current">{{ product.price | money }}</span>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>



{% schema %}
{
  "name": "Now Trending",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Now Trending"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Now Trending",
      "category": "Custom",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
