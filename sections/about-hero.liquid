<section class="about-hero">
  <div class="container hero-flex">
    <div class="hero-text">
      <h1 class="about-title">{{ section.settings.title }}</h1>
      <p class="about-subtitle">{{ section.settings.subtitle }}</p>
    </div>
    {% if section.settings.image != blank %}
      <div class="hero-image">
        <img src="{{ section.settings.image | image_url: width: 600 }}" alt="About Hero Image">
      </div>
    {% endif %}
  </div>
</section>

<style>
.container{
    max-width: 1200px;
    margin: auto;
}
  .about-hero {
    background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
    color: #fff;
    padding: 4rem 1rem;
  }

  .hero-flex {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .hero-text {
    text-align: start;
    max-width: 600px;
  }

  .about-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .about-subtitle {
    font-size: 1.4rem;
    line-height: 1.6;
  }

  .hero-image img {
    max-width: 100%;
    height: auto;
    border-radius: 1rem;
  }

  /* For larger screens */
  @media(min-width: 768px) {
    .hero-flex {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
    .hero-text {
      flex: 1;
    }
    .hero-image {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
</style>

{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We believe in quality, trust, and style that lasts."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "About Hero with Image"
    }
  ]
}
{% endschema %}
