<section class="about-hero">
  <div class="container">
    <h1 class="about-title">{{ section.settings.title }}</h1>
    <p class="about-subtitle">{{ section.settings.subtitle }}</p>
  </div>
</section>

<style>
  .about-hero {
    background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
    color: #fff;
    text-align: center;
    padding: 4rem 1rem;
  }

  .about-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .about-subtitle {
    font-size: 1.4rem;
    max-width: 700px;
    margin: auto;
    line-height: 1.6;
  }
</style>

{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We believe in quality, trust, and style that lasts."
    }
  ]
}
{% endschema %}
