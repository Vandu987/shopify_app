{% schema %}
{
  "name": "About Hero",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "about_hero_title",
      "label": "Hero Title",
      "default": "Welcome to Our About Page"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
{% endschema %}

{% stylesheet %}
<style>
  .about-hero {
    text-align: center;
    padding: 80px 20px;
    background-color: #f9f9f9;
  }

  .about-hero h1 {
    font-size: 3rem;
    font-weight: bold;
    margin: 0;
  }
</style>
{% endstylesheet %}

<div class="about-hero">
  {% if section.settings.about_hero_title != blank %}
    <h1>{{ section.settings.about_hero_title }}</h1>
  {% endif %}
</div>
