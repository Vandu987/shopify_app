{% comment %}
  Ultimate Dynamic Hero Section
  Features:
  - Multiple layout options
  - Animated elements
  - Video background option
  - Dynamic content
  - Fully responsive
{% endcomment %}

<style>
  :root {
    --hero-primary: {{ section.settings.color_primary }};
    --hero-secondary: {{ section.settings.color_secondary }};
    --hero-text: {{ section.settings.text_color }};
    --hero-button-text: {{ section.settings.button_text_color }};
  }

  .dynamic-hero {
    position: relative;
    min-height: {{ section.settings.height_mobile }}vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding: 40px 0;
    background-color: {{ section.settings.color_primary }};
  }

  .hero-bg {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    z-index: 0;
  }

  .hero-bg.gradient {
    background: {{ section.settings.background_gradient | default: 'linear-gradient(to right, var(--hero-primary), var(--hero-secondary))' }};
  }

  .hero-bg.image {
    background-size: cover;
    background-position: {{ section.settings.image_position }};
  }

  .hero-bg.video video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    align-items: center;
    flex-direction: {{ section.settings.layout }};
  }

  .hero-content {
    flex: 1;
    padding: 40px;
    color: var(--hero-text);
  }

  .hero-pre-title {
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 15px;
    opacity: 0.8;
    {% if section.settings.enable_animations %}animation: fadeInUp 0.8s ease;{% endif %}
  }

  .hero-title {
    font-size: {{ section.settings.title_size }}px;
    line-height: 1.2;
    margin-bottom: 20px;
    {% if section.settings.enable_animations %}
      animation: fadeInUp 0.8s ease 0.2s forwards;
      opacity: 0;
    {% endif %}
  }

  .hero-subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    line-height: 1.6;
    margin-bottom: 30px;
    max-width: 600px;
    {% if section.settings.enable_animations %}
      animation: fadeInUp 0.8s ease 0.4s forwards;
      opacity: 0;
    {% endif %}
  }

  .hero-buttons {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    {% if section.settings.enable_animations %}
      animation: fadeInUp 0.8s ease 0.6s forwards;
      opacity: 0;
    {% endif %}
  }

  .hero-button {
    display: inline-block;
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .hero-button.primary {
    background: {{ section.settings.button_bg_color }};
    color: var(--hero-button-text);
  }

  .hero-button.secondary {
    border: 2px solid var(--hero-text);
    color: var(--hero-text);
  }

  .hero-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }

  .hero-media {
    flex: 1;
    position: relative;
    {% if section.settings.enable_animations %}
      animation: fadeIn 1s ease 0.4s forwards;
      opacity: 0;
    {% endif %}
  }

  .hero-image {
    border-radius: {{ section.settings.image_radius }}px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    transform: perspective(1000px) rotateY({{ section.settings.image_rotate }}deg);
    transition: transform 0.5s ease;
  }

  .hero-image:hover {
    transform: perspective(1000px) rotateY(0deg);
  }

  .hero-media img {
    width: 100%;
    height: auto;
    display: block;
  }

  .hero-decoration {
    position: absolute;
    z-index: 1;
    opacity: 0.1;
    {% if section.settings.enable_animations %}
      animation: float 8s infinite ease-in-out;
    {% endif %}
  }

  .decoration-1 { top: 10%; left: 5%; width: 100px; }
  .decoration-2 { bottom: 10%; right: 5%; width: 120px; animation-delay: 1s; }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
  }

  @media (min-width: 768px) {
    .dynamic-hero {
      min-height: {{ section.settings.height_desktop }}vh;
    }
  }

  @media (max-width: 767px) {
    .hero-container {
      flex-direction: column;
      padding: 0 20px;
    }

    .hero-content {
      padding: 20px;
      text-align: center;
    }

    .hero-title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }

    .hero-subtitle {
      font-size: {{ section.settings.subtitle_size_mobile }}px;
      margin-left: auto;
      margin-right: auto;
    }

    .hero-buttons {
      justify-content: center;
    }

    .hero-media {
      margin-top: 40px;
      max-width: 100%;
    }

    .hero-image {
      transform: none !important;
    }
  }
</style>

<section class="dynamic-hero">
  <div class="hero-bg {{ section.settings.background_type }}">
    {% case section.settings.background_type %}
      {% when 'image' %}
        {% if section.settings.background_image != blank %}
          {% assign bg_image = section.settings.background_image | img_url: '2000x' %}
          <style>
            .hero-bg.image {
              background-image: url('{{ bg_image }}');
            }
          </style>
        {% endif %}
      {% when 'video' %}
        {% if section.settings.video_url != blank %}
          <video autoplay muted loop playsinline>
            <source src="{{ section.settings.video_url }}" type="video/mp4">
          </video>
        {% endif %}
    {% endcase %}
  </div>

  {% if section.settings.show_decorations %}
    {{ 'toy-decoration-1.png' | asset_url | img_tag: 'Decoration', 'hero-decoration decoration-1' }}
    {{ 'toy-decoration-2.png' | asset_url | img_tag: 'Decoration', 'hero-decoration decoration-2' }}
  {% endif %}

  <div class="hero-container">
    <div class="hero-content">
      {% if section.settings.pre_title != blank %}
        <div class="hero-pre-title">{{ section.settings.pre_title }}</div>
      {% endif %}

      {% if section.settings.title != blank %}
        <h1 class="hero-title">{{ section.settings.title }}</h1>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <div class="hero-subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}

      {% if section.settings.button_1_text != blank or section.settings.button_2_text != blank %}
        <div class="hero-buttons">
          {% if section.settings.button_1_text != blank %}
            <a href="{{ section.settings.button_1_link }}" class="hero-button primary">
              {{ section.settings.button_1_text }}
            </a>
          {% endif %}

          {% if section.settings.button_2_text != blank %}
            <a href="{{ section.settings.button_2_link }}" class="hero-button secondary">
              {{ section.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>

    {% if section.settings.media_image != blank or section.settings.show_media %}
      <div class="hero-media">
        <div class="hero-image">
          {% if section.settings.media_image != blank %}
            {{ section.settings.media_image | image_url: width: 800 | image_tag: loading: 'lazy', alt: section.settings.title }}
          {% else %}
            {{ 'hero-toy-default.png' | asset_url | img_tag: 'Happy kids playing', 'class:default-hero-image' }}
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Dynamic Hero Section",
  "settings": [
    { "type": "header", "content": "Layout Options" },
    { "type": "select", "id": "layout", "label": "Layout", "options": [
      { "value": "row", "label": "Content Left / Media Right" },
      { "value": "row-reverse", "label": "Media Left / Content Right" },
      { "value": "column", "label": "Content Only" }
    ], "default": "row" },
    { "type": "range", "id": "height_desktop", "label": "Desktop Height (vh)", "min": 50, "max": 100, "step": 5, "default": 80 },
    { "type": "range", "id": "height_mobile", "label": "Mobile Height (vh)", "min": 50, "max": 100, "step": 5, "default": 70 },
    { "type": "checkbox", "id": "enable_animations", "label": "Enable Animations", "default": true },
    { "type": "checkbox", "id": "show_decorations", "label": "Show Decorative Elements", "default": true },
    { "type": "header", "content": "Background Options" },
    { "type": "select", "id": "background_type", "label": "Background Type", "options": [
      { "value": "gradient", "label": "Gradient" },
      { "value": "image", "label": "Image" },
      { "value": "video", "label": "Video" }
    ], "default": "gradient" },
    { "type": "color", "id": "color_primary", "label": "Primary Color", "default": "#FF5E7D" },
    { "type": "color", "id": "color_secondary", "label": "Secondary Color", "default": "#47B8E0" },
    { "type": "text", "id": "background_gradient", "label": "Custom Gradient", "info": "Leave blank to use default colors", "default": "linear-gradient(135deg, #FF9A9E 0%, #FAD0C4 100%)" },
    { "type": "image_picker", "id": "background_image", "label": "Background Image" },
    { "type": "select", "id": "image_position", "label": "Image Position", "options": [
      { "value": "center", "label": "Center" },
      { "value": "top", "label": "Top" },
      { "value": "bottom", "label": "Bottom" },
      { "value": "left", "label": "Left" },
      { "value": "right", "label": "Right" }
    ], "default": "center" },
    { "type": "text", "id": "video_url", "label": "Video URL", "info": "Upload video to Files and paste URL here" },
    { "type": "header", "content": "Content Options" },
    { "type": "text", "id": "pre_title", "label": "Pre-Title", "default": "Welcome to Toyland!" },
    { "type": "text", "id": "title", "label": "Title", "default": "Discover Magical Toys" },
    { "type": "range", "id": "title_size", "label": "Title Size (Desktop)", "min": 20, "max": 80, "step": 2, "default": 48 },
    { "type": "range", "id": "title_size_mobile", "label": "Title Size (Mobile)", "min": 18, "max": 60, "step": 2, "default": 36 },
    { "type": "richtext", "id": "subtitle", "label": "Subtitle", "default": "<p>Where imagination comes to life through play</p>" },
    { "type": "range", "id": "subtitle_size", "label": "Subtitle Size (Desktop)", "min": 12, "max": 36, "step": 1, "default": 20 },
    { "type": "range", "id": "subtitle_size_mobile", "label": "Subtitle Size (Mobile)", "min": 12, "max": 24, "step": 1, "default": 16 },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#FFFFFF" },
    { "type": "header", "content": "Buttons" },
    { "type": "text", "id": "button_1_text", "label": "Primary Button Text", "default": "Shop Now" },
    { "type": "url", "id": "button_1_link", "label": "Primary Button Link" },
    { "type": "color", "id": "button_bg_color", "label": "Button Background", "default": "#FFFFFF" },
    { "type": "color", "id": "button_text_color", "label": "Button Text Color", "default": "#FF5E7D" },
    { "type": "text", "id": "button_2_text", "label": "Secondary Button Text", "default": "Learn More" },
    { "type": "url", "id": "button_2_link", "label": "Secondary Button Link" },
    { "type": "header", "content": "Media Options" },
    { "type": "checkbox", "id": "show_media", "label": "Show Media Area", "default": true },
    { "type": "image_picker", "id": "media_image", "label": "Media Image" },
    { "type": "range", "id": "image_radius", "label": "Image Radius", "min": 0, "max": 50, "step": 2, "default": 20 },
    { "type": "range", "id": "image_rotate", "label": "Image Rotation", "min": -20, "max": 20, "step": 1, "default": -10 }
  ],
  "presets": [
    {
      "name": "Dynamic Hero Section",
      "category": "Hero Sections"
    }
  ]
}
{% endschema %}
