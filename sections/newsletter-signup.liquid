{% comment %}
  Section: Stylish Newsletter Signup
{% endcomment %}

<div class="newsletter-wrapper">
  <div class="newsletter-inner">
    <h2 class="newsletter-heading">{{ section.settings.heading }}</h2>
    <p class="newsletter-subtext">{{ section.settings.subtext }}</p>

    <form method="post" action="/contact#contact_form" accept-charset="UTF-8" class="newsletter-form" id="contact_form">
      <input type="hidden" name="form_type" value="customer" />
      <input type="hidden" name="utf8" value="âœ“" />
      <input type="email" name="contact[email]" class="newsletter-input" placeholder="Your e-mail goes here" required>
      <button type="submit" class="newsletter-button">{{ section.settings.button_label }}</button>
    </form>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get top deals, latest trends, and more."
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Our regular newsletters are packed full of events at our stores, fun facts, competitions and the latest in the magical world of toys."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Subscribe"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup",
      "category": "Custom"
    }
  ]
}
{% endschema %}