{% comment %}
  Dynamic KidsToys Footer - Fully Editable
{% endcomment %}

<footer class="kids-toys-footer">
  <div class="footer-container">
    <!-- Brand Information Section -->
    <div class="footer-brand">
      <h2 class="footer-logo">{{ section.settings.brand_name }}</h2>
      <h3 class="footer-tagline">{{ section.settings.tagline }}</h3>
      <div class="footer-description">
        {{ section.settings.description }}
      </div>
      <div class="footer-disclaimer">
        {{ section.settings.disclaimer | replace: 'Hamleys website', '<a href="' | append: section.settings.hamleys_url | append: '" class="external-link" target="_blank">Hamleys website</a>' }}
      </div>
    </div>

    <!-- Links Section -->
    <div class="footer-links-section">
      <h3 class="links-heading">{{ section.settings.links_heading }}</h3>
      <ul class="footer-links">
        {% for block in section.blocks %}
          {% if block.type == 'link' %}
            <li>
              <a href="{{ block.settings.url }}" class="footer-link">
                {{ block.settings.title }}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>

  <!-- Copyright Section -->
  <div class="footer-copyright">
    {{ section.settings.copyright_text }}
  </div>
</footer>

<style>
  .kids-toys-footer {
    background-color: #f8f9fa;
    padding: 40px 20px;
    font-family: 'Arial', sans-serif;
    color: #333;
    border-top: 1px solid #e1e1e1;
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    gap: 40px;
    padding-bottom: 20px;
  }
  
  .footer-brand {
    flex: 2;
    min-width: 300px;
  }
  
  .footer-logo {
    font-size: 28px;
    margin-bottom: 10px;
    color: #2c3e50;
  }
  
  .footer-tagline {
    font-size: 18px;
    margin-bottom: 15px;
    color: #e74c3c;
  }
  
  .footer-description,
  .footer-disclaimer {
    line-height: 1.6;
    margin-bottom: 15px;
  }
  
  .external-link {
    color: #3498db;
    font-weight: bold;
    text-decoration: none;
  }
  
  .external-link:hover {
    text-decoration: underline;
  }
  
  .footer-links-section {
    flex: 1;
    min-width: 200px;
  }
  
  .links-heading {
    font-size: 18px;
    margin-bottom: 15px;
    color: #2c3e50;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
  }
  
  .footer-links li {
    margin-bottom: 10px;
  }
  
  .footer-link {
    color: #7f8c8d;
    text-decoration: none;
    transition: color 0.3s;
  }
  
  .footer-link:hover {
    color: #e74c3c;
  }
  
  .footer-copyright {
    max-width: 1200px;
    margin: 20px auto 0;
    padding-top: 20px;
    border-top: 1px solid #e1e1e1;
    text-align: center;
    color: #7f8c8d;
    font-size: 14px;
  }
  
  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      gap: 30px;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "shopify-section-footer",
  "settings": [
    {
      "type": "header",
      "content": "Brand Information"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "KidsToys™"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Booster 6 revolution"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements or welcome customers to your store.</p>"
    },
    {
      "type": "richtext",
      "id": "disclaimer",
      "label": "Disclaimer",
      "default": "<p>This is a Demo Store created for booster theme. If you would like to buy the products in this store you may buy them on Hamleys website.</p>"
    },
    {
      "type": "url",
      "id": "hamleys_url",
      "label": "Hamleys Website URL",
      "default": "https://www.hamleys.in/"
    },
    {
      "type": "header",
      "content": "Links Section"
    },
    {
      "type": "text",
      "id": "links_heading",
      "label": "Links Heading",
      "default": "More links"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "richtext",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "<p>Designed and developed by BoosterThemes™</p>"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Footer Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Link Text",
          "default": "Helpdesk"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL",
          "default": "/"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link",
        "settings": {
          "title": "Helpdesk",
          "url": "/pages/helpdesk"
        }
      },
      {
        "type": "link",
        "settings": {
          "title": "FAQs",
          "url": "/pages/faqs"
        }
      },
      {
        "type": "link",
        "settings": {
          "title": "Orders",
          "url": "/pages/orders"
        }
      },
      {
        "type": "link",
        "settings": {
          "title": "Returns",
          "url": "/pages/returns"
        }
      }
    ]
  }
}
{% endschema %}