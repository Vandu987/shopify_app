<section class="about-main container">
  <div class="about-row">
    <div class="about-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
    </div>
    <div class="about-image">
      <img src="{{ section.settings.image | image_url: width: 800 }}" alt="Who We Are" />
    </div>
  </div>
</section>

<style>
  .about-main { padding: 4rem 0; }
  .about-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 4rem;
  }
  .about-text, .about-image {
    flex: 1 1 50%;
    padding: 1rem;
  }
  .about-text h2 {
    color: #ff6b6b;
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  .about-text p {
    font-size: 1.1rem;
    color: #333;
    line-height: 1.7;
  }
  .about-image img {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  @media (max-width: 768px) {
    .about-row { flex-direction: column; }
  }
</style>

{% schema %}
{
  "name": "About - Who We Are",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Who We Are"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "We are a team passionate about delivering the best fashion and experiences."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}
