<!-- sections/hero-slider.liquid -->
<div class="hero-slider-wrapper">
  <div class="hero-slider">
    {% for block in section.blocks %}
      <div class="slide">
        <div class="slide-content">
          <div class="slide-image">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.heading }}">
          </div>
          <div class="slide-text">
            <h2>{{ block.settings.heading }}</h2>
            <p>{{ block.settings.subheading }}</p>
            {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_link }}" class="slide-btn">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Navigation -->
  <button class="prev-slide">&#10094;</button>
  <button class="next-slide">&#10095;</button>
</div>


{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "hero-slider-section",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your Heading Here"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Your subheading goes here"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Hero Slider",
      "category": "Custom",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
