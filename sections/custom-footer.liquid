{% comment %} 
  Custom Footer Section — KidsToys Style
{% endcomment %}

<footer class="custom-footer">
  <div class="footer-top">
    <div class="footer-left">
      <h4>Booster & revolution</h4>
      <p>Use this text to share information about your brand with your customers. Describe a product, share announcements or welcome customers to your store.</p>
      <p>This is a Demo Store created for booster theme. If you would like to buy the products in this store you may buy them on <a href="https://www.hamleys.in/" target="_blank">Hamleys website</a>.</p>
    </div>

    <div class="footer-center">
      <h2 class="footer-logo">{{ section.settings.logo_text }}</h2>
    </div>

    <div class="footer-right">
      <h4>More links</h4>
      <ul>
        {% for link in section.settings.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
      <div class="footer-icons">
        {% for icon in section.settings.social_icons %}
          <a href="{{ icon.url }}" target="_blank">{{ icon.icon | raw }}</a>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>Designed and developed by <a href="https://boostertheme.com" target="_blank">BoosterTheme™</a></p>
  </div>
</footer>

{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Footer Logo Text",
      "default": "KidsToys"
    },
    {
      "type": "list",
      "id": "links",
      "label": "Footer Links",
      "default": [
        { "title": "Helpdesk", "url": "#" },
        { "title": "FAQs", "url": "#" },
        { "title": "Orders", "url": "#" },
        { "title": "Returns", "url": "#" }
      ]
    },
    {
      "type": "list",
      "id": "social_icons",
      "label": "Social Icons (HTML)",
      "default": [
        { "icon": "<i class='fa fa-facebook'></i>", "url": "https://facebook.com" },
        { "icon": "<i class='fa fa-instagram'></i>", "url": "https://instagram.com" },
        { "icon": "<i class='fa fa-whatsapp'></i>", "url": "https://wa.me/" },
        { "icon": "<i class='fa fa-youtube'></i>", "url": "https://youtube.com" }
      ]
    }
  ],
  "presets": [
    {
      "name": "KidsToys Footer",
      "category": "Custom"
    }
  ]
}
{% endschema %}
