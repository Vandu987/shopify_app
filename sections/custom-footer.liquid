{% comment %}
  Custom Footer Section
{% endcomment %}

<footer class="custom-footer">
  <div class="footer-top">
    <div class="footer-left">
      <h4>{{ section.settings.company_name }}</h4>
      <p>{{ section.settings.description }}</p>
    </div>

    <div class="footer-center">
      <h2 class="footer-logo">{{ section.settings.logo_text }}</h2>
    </div>

    <div class="footer-right">
      <h4>{{ section.settings.links_heading }}</h4>
      <ul>
        {% for block in section.blocks %}
          {% if block.type == 'link' %}
            <li><a href="{{ block.settings.url }}">{{ block.settings.title }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>

      <div class="footer-icons">
        {% for block in section.blocks %}
          {% if block.type == 'social' %}
            <a href="{{ block.settings.url }}" target="_blank">
              {{ block.settings.icon | default: block.settings.platform | capitalize }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {{ 'now' | date: "%Y" }} {{ section.settings.copyright_text }}</p>
  </div>
</footer>


{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "My Store"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "About your store..."
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "LOGO"
    },
    {
      "type": "text",
      "id": "links_heading",
      "label": "Links Heading",
      "default": "Quick Links"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "All rights reserved."
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Link Text",
          "default": "Home"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    },
    {
      "type": "social",
      "name": "Social Media",
      "settings": [
        {
          "type": "text",
          "id": "platform",
          "label": "Platform Name",
          "info": "e.g. Facebook, Instagram"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Profile URL"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Default Footer",
      "category": "Custom",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "title": "Home",
            "url": "/"
          }
        },
        {
          "type": "link",
          "settings": {
            "title": "Products",
            "url": "/collections/all"
          }
        },
        {
          "type": "social",
          "settings": {
            "platform": "facebook",
            "url": "https://facebook.com"
          }
        }
      ]
    }
  ]
}
{% endschema %}