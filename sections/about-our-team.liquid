<section class="about-main container">
  <div class="about-row reverse">
    <div class="about-image">
      <img src="{{ section.settings.image | image_url: width: 800 }}" alt="Our Team" />
    </div>
    <div class="about-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
    </div>
  </div>
</section>

{% comment %} Reuses same styles as previous {% endcomment %}

{% schema %}
{
  "name": "About - Our Team",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Meet Our Team"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Our team is committed to delivering a stylish and smooth experience for every customer."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}
