<section class="about-cta">
  <div class="container cta-content">
    <div class="cta-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtext }}</p>
    </div>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="cta-button">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</section>

<style>
  .about-cta {
    padding: 4rem 2rem;
    background: {{ section.settings.bg_color | default: '#ff6b6b' }};
    color: {{ section.settings.text_color | default: '#fff' }};
    text-align: center;
  }
  .cta-content {
    max-width: 800px;
    margin: 0 auto;
  }
  .cta-text h2 {
    font-size: {{ section.settings.heading_size | default: '2rem' }};
    margin-bottom: 1rem;
  }
  .cta-text p {
    font-size: {{ section.settings.subtext_size | default: '1.1rem' }};
    margin-bottom: 2rem;
  }
  .cta-button {
    background: {{ section.settings.button_bg_color | default: '#fff' }};
    color: {{ section.settings.button_text_color | default: '#ff6b6b' }};
    padding: 0.8rem 1.6rem;
    border-radius: 8px;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }
  .cta-button:hover {
    background: {{ section.settings.button_hover_bg_color | default: '#f1f1f1' }};
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .about-cta {
      padding: 2rem 1rem;
    }
    .cta-text h2 {
      font-size: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "About CTA",
  "presets": [
    {
      "name": "About CTA"
    }
  ]
}
{% endschema %}