<section class="about-cta" id="{{ section.id }}">
  <div class="container cta-content">
    <div class="cta-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtext }}</p>

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="cta-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  #{{ section.id }}.about-cta {
    padding: 4rem 2rem;
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    text-align: center;
  }

  .cta-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-text h2 {
    font-size: {{ section.settings.heading_size }};
    margin-bottom: 1rem;
  }

  .cta-text p {
    font-size: {{ section.settings.subtext_size }};
    margin-bottom: 2rem;
  }

  .cta-button {
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 0.8rem 1.6rem;
    border-radius: 8px;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: {{ section.settings.button_hover_bg_color }};
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .about-cta {
      padding: 2rem 1rem;
    }
    .cta-text h2 {
      font-size: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "About CTA",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to work with us?"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Contact us today and let's bring your vision to life!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/contact"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ff6b6b"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ff6b6b"
    },
    {
      "type": "color",
      "id": "button_hover_bg_color",
      "label": "Button Hover Background",
      "default": "#f1f1f1"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        { "value": "1.5rem", "label": "Small" },
        { "value": "2rem", "label": "Medium" },
        { "value": "2.5rem", "label": "Large" }
      ],
      "default": "2rem"
    },
    {
      "type": "select",
      "id": "subtext_size",
      "label": "Subtext Size",
      "options": [
        { "value": "0.9rem", "label": "Small" },
        { "value": "1.1rem", "label": "Medium" },
        { "value": "1.3rem", "label": "Large" }
      ],
      "default": "1.1rem"
    }
  ],
  "presets": [
    {
      "name": "About CTA",
      "category": "Custom"
    }
  ]
}
{% endschema %}
