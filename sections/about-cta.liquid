<section class="about-cta">
  <div class="container cta-content">
    <div class="cta-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtext }}</p>
    </div>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="cta-button">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</section>

<style>
.about-cta {
  padding: 4rem 2rem;
  background: #ff6b6b;
  color: #fff;
  text-align: center;
}
.cta-content {
  max-width: 800px;
  margin: auto;
}
.cta-text h2 {
  font-size: 2rem;
  margin-bottom: 1rem;
}
.cta-text p {
  font-size: 1.1rem;
  margin-bottom: 2rem;
}
.cta-button {
  background: #fff;
  color: #ff6b6b;
  padding: 0.8rem 1.6rem;
  border-radius: 8px;
  font-weight: bold;
  text-decoration: none;
  display: inline-block;
}
.cta-button:hover {
  background: #f1f1f1;
}
</style>

{% schema %}
{
  "name": "Call to Action",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to work with us?"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Contact us today and letâ€™s bring your vision to life!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/contact"
    }
  ],
  "presets": [
    {
      "name": "Call to Action"
    }
  ]
}
{% endschema %}
