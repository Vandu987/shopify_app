{% schema %}
{
  "name": "About Page Builder",
  "settings": [],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero Section",
      "settings": [
        {
          "type": "image_picker",
          "id": "hero_image",
          "label": "Hero Image"
        },
        {
          "type": "text",
          "id": "hero_title",
          "label": "Heading",
          "default": "Welcome to Our Toy World"
        },
        {
          "type": "textarea",
          "id": "hero_text",
          "label": "Subtext",
          "default": "Where imagination comes to play! Discover magical toys that spark creativity and joy."
        }
      ]
    },
    {
      "type": "text_section",
      "name": "Text Content",
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Title",
          "default": "Our Story"
        },
        {
          "type": "richtext",
          "id": "section_content",
          "label": "Content",
          "default": "<p>Founded in 2010, we've been bringing smiles to children's faces with our carefully curated selection of toys. Our mission is to provide high-quality, educational, and fun toys that inspire creativity and learning through play.</p>"
        }
      ]
    },
    {
      "type": "image_with_text",
      "name": "Image with Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Our Promise to You"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "We carefully test every toy to ensure it meets our high standards for safety, durability, and fun factor. Our team of play experts selects only the best toys that will stand up to hours of imaginative play."
        },
        {
          "type": "select",
          "id": "layout",
          "label": "Image Position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "About Page",
      "blocks": [
        {
          "type": "hero"
        },
        {
          "type": "text_section"
        },
        {
          "type": "image_with_text"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="about-page">
  {% for block in section.blocks %}
    {% case block.type %}

      {% when "hero" %}
        <div class="about-hero" {{ block.shopify_attributes }}>
          {% if block.settings.hero_image %}
            <img src="{{ block.settings.hero_image | img_url: '1200x' }}" alt="{{ block.settings.hero_title | escape }}" loading="lazy">
          {% endif %}
          <h1>{{ block.settings.hero_title }}</h1>
          <p>{{ block.settings.hero_text }}</p>
        </div>

      {% when "text_section" %}
        <div class="about-text" {{ block.shopify_attributes }}>
          <h2>{{ block.settings.section_title }}</h2>
          <div class="rte">{{ block.settings.section_content }}</div>
        </div>

      {% when "image_with_text" %}
        <div class="image-with-text {% if block.settings.layout == 'right' %}image-right{% endif %}" {{ block.shopify_attributes }}>
          {% if block.settings.img %}
            <img src="{{ block.settings.img | img_url: '800x' }}" alt="{{ block.settings.title | escape }}" loading="lazy">
          {% endif %}
          <div>
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>

    {% endcase %}
  {% endfor %}
</div>
{{ 'aboutt-page.css' | asset_url | stylesheet_tag }}