{% schema %}
{
  "name": "Ultimate About Page",
  "settings": [
    {
      "type": "header",
      "content": "Global Settings"
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#FF5E7D"
    },
    {
      "type": "color",
      "id": "secondary_color",
      "label": "Secondary Color",
      "default": "#47B8E0"
    },
    {
      "type": "checkbox",
      "id": "enable_animations",
      "label": "Enable Animations",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "hero",
      "name": "Hero Section",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Background Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Background Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Welcome to Toytopia!"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "<p>Where imagination comes to life through play</p>"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Explore Toys"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    },
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Profile Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role",
          "default": "Toy Expert"
        },
        {
          "type": "richtext",
          "id": "bio",
          "label": "Bio",
          "default": "<p>Passionate about finding the perfect toys for every child.</p>"
        }
      ]
    },
    {
      "type": "toy_gallery",
      "name": "Toy Gallery",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Section Title",
          "default": "Our Favorite Toys"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "range",
          "id": "product_count",
          "label": "Number of Toys to Show",
          "min": 3,
          "max": 12,
          "step": 1,
          "default": 6
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ultimate About Page",
      "blocks": [
        {
          "type": "hero"
        },
        {
          "type": "team_member"
        },
        {
          "type": "team_member"
        },
        {
          "type": "toy_gallery"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  /* ===== DYNAMIC COLORS ===== */
  :root {
    --color-primary: {{ section.settings.primary_color }};
    --color-secondary: {{ section.settings.secondary_color }};
  }

  /* ===== HERO SECTION ===== */
  .hero-section {
    position: relative;
    height: 90vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    overflow: hidden;
    {% if section.blocks['hero'].settings.desktop_image %}
      background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('{{ section.blocks['hero'].settings.desktop_image | img_url: '2000x' }}');
      background-size: cover;
      background-position: center;
    {% endif %}
  }

  @media (max-width: 768px) {
    .hero-section {
      {% if section.blocks['hero'].settings.mobile_image %}
        background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('{{ section.blocks['hero'].settings.mobile_image | img_url: '800x' }}') !important;
        background-size: cover !important;
        background-position: center !important;
      {% endif %}
    }
  }

  .hero-content {
    text-align: center;
    color: white;
    padding: 0 20px;
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .hero-title {
    font-size: 4.5rem;
    font-weight: 800;
    margin-bottom: 20px;
    text-shadow: 2px 2px 10px rgba(0,0,0,0.3);
    {% if section.settings.enable_animations %}
      animation: fadeInUp 1s ease;
    {% endif %}
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 30px;
    opacity: 0.9;
    {% if section.settings.enable_animations %}
      animation: fadeInUp 1s ease 0.3s forwards;
      opacity: 0;
    {% endif %}
  }

  .hero-button {
    display: inline-block;
    padding: 15px 35px;
    background: white;
    color: var(--color-primary);
    border-radius: 50px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    {% if section.settings.enable_animations %}
      animation: fadeInUp 1s ease 0.6s forwards;
      opacity: 0;
    {% endif %}
  }

  .hero-button:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }

  /* ===== TEAM SECTION ===== */
  .team-section {
    padding: 80px 0;
    background: #f9f9f9;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .team-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
  }

  .team-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.1);
  }

  .team-image {
    height: 300px;
    background: #f5f5f5;
  }

  .team-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .team-info {
    padding: 25px;
  }

  .team-name {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 5px;
  }

  .team-role {
    color: var(--color-secondary);
    font-weight: 600;
    margin-bottom: 15px;
  }

  /* ===== TOY GALLERY ===== */
  .gallery-section {
    padding: 80px 0;
    background: white;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .gallery-item {
    border-radius: 16px;
    overflow: hidden;
    position: relative;
    height: 350px;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  /* ===== ANIMATIONS ===== */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.8rem;
    }
    .hero-subtitle {
      font-size: 1.2rem;
    }
  }
</style>

<div class="about-page">
  <!-- HERO SECTION -->
  {% for block in section.blocks %}
    {% if block.type == 'hero' %}
      <section class="hero-section" {{ block.shopify_attributes }}>
        <div class="hero-content">
          <h1 class="hero-title">{{ block.settings.title }}</h1>
          <div class="hero-subtitle rte">{{ block.settings.subtitle }}</div>
          {% if block.settings.button_link %}
            <a href="{{ block.settings.button_link }}" class="hero-button">
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </section>
    {% endif %}
  {% endfor %}

  <!-- TEAM SECTION -->
  <section class="team-section">
    <h2 style="text-align: center; font-size: 2.5rem; margin-bottom: 50px; color: var(--color-primary);">Our Toy Experts</h2>
    <div class="team-grid">
      {% for block in section.blocks %}
        {% if block.type == 'team_member' %}
          <div class="team-card" {{ block.shopify_attributes }}>
            <div class="team-image">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '600x' }}" alt="{{ block.settings.name }}" loading="lazy">
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="team-info">
              <h3 class="team-name">{{ block.settings.name }}</h3>
              <p class="team-role">{{ block.settings.role }}</p>
              <div class="rte">{{ block.settings.bio }}</div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>

  <!-- TOY GALLERY -->
  {% for block in section.blocks %}
    {% if block.type == 'toy_gallery' %}
      <section class="gallery-section" {{ block.shopify_attributes }}>
        <h2 style="text-align: center; font-size: 2.5rem; margin-bottom: 50px; color: var(--color-primary);">
          {{ block.settings.title }}
        </h2>
        <div class="gallery-grid">
          {% if block.settings.collection != blank %}
            {% assign collection = collections[block.settings.collection] %}
            {% for product in collection.products limit: block.settings.product_count %}
              <a href="{{ product.url }}" class="gallery-item">
                <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}" loading="lazy">
              </a>
            {% endfor %}
          {% else %}
            {% for i in (1..block.settings.product_count) %}
              <div class="gallery-item">
                {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endfor %}
          {% endif %}
        </div>
      </section>
    {% endif %}
  {% endfor %}
</div>
